
<form action="/contact" class="contact-form" method="post">
    <div class="form-group row">
      <label for="name-surname" class="fa icon-contact fa-user usericon bigicon col-2 col-sm-2 col-form-label col-md-2"></label>
      <div class="col-10 col-sm-5 col-md-5">
        <input type="text" class="form-control" id="contact_name" placeholder="Name"  name="contact_name" required>
      </div>
      <div class="col-2 hidden-sm-up">
      </div>
      <div class="col-10 col-sm-5 col-md-5">
        <input type="text" class="form-control" id="contact_surname" placeholder="Surnames" name="contact_surname" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="email" class="fa icon-contact fa-envelope-o bigicon col-2 col-sm-2 col-form-label"></label>
      <div class="col-10 col-sm-10">
        <input type="email" class="form-control" id="contact_email" placeholder="E-mail" name="contact_email" 
        <% if (isUserLoggedIn) {%>
        value="<%=currentUser.email %>" 
        <%}%> required>
      </div>
    </div>

    <div class="form-group row">
      <label for="phone-number" class="fa icon-contact fa-phone-square bigicon col-2 col-sm-2 col-form-label"></label>
      <div class="col-10 col-sm-10">
        <input type="tel" class="form-control" id="contact_number" placeholder="Contact number (optional)" name="contact_number">
      </div>
    </div>


    <div class="form-group row">
      <label for="subject" class="fa icon-contact fa-pencil-square-o bigicon col-2 col-sm-2 col-form-label"></label>
      <div class="col-10 col-sm-10">
        <input type="text" class="form-control" id="contact_subject" placeholder="Subject" name="contact_subject">
      </div>
    </div>

    <div class="form-group row">
      <label for="subject" class="fa icon-contact fa-comment-o bigicon col-2 col-sm-2 col-form-label"></label>
      <div class="col-10 col-sm-10">
        <textarea class="form-control" id="contact_message" name="contact_message" placeholder="Enter your massage here." rows="7" required></textarea>
      </div>
    </div>
     <% if (typeof err !== "undefined" && err === true) { %>
        <div class="alert alert-danger"><strong><%= message %></strong></div>
      <% } %>

      <% if (typeof err !== "undefined" && err === false) { %>
        <div class="alert alert-success"><strong><%= message %></strong></div>
      <% } %>

    <% if (isUserLoggedIn){%>
    <input type="hidden" class="id_form" name="contact_user" value="<%= currentUser._id %>">
    <%}%>
       <button type="submit" class="btn btn-primary btn-lg btn-block">Send</button>
  </form>

 