

<form action="/signup" method="POST" class="signup_form" id="signup_form" enctype="multipart/form-data">
    <div class="form-group">
    <label for="Username"><strong>User name</strong></label>
    <input type="text" name="username" class="form-control" id="username"  required>
  </div>
  <div class="form-group">
    <label for="Mail"><strong>Email address</strong></label>
    <input type="email" name="email" class="form-control" id="mail" aria-describedby="emailHelp" placeholder="example@example.com" required>
  </div>
  <div class="form-group">
    <label for="Password"><strong>Password</strong></label>
    <input name="password"  type="password" class="form-control" id="password"  required>
 </div>
 <div class="form-group">
    <label for="Description"><strong>Description</strong> (optional)</label>
    <textarea name="description" class="form-control" id="exampleTextarea" rows="4" placeholder="Tell us a bit about yourself!"></textarea>
  </div>

<div class="country_form">
  <label class="mr-sm-2" for="inlineFormCustomSelect"><strong>Select your Country</strong></label>
  <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="country" name="countrySelected">
    <% countries.forEach( (country) => { %>
    <option name="country" value="<%=country %>"><%=country %></option>
    <%}); %>
  </select>
  </div>

<h5>Interests<small> (Select at least 1)</small> </h5>

<div class="row">   

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Romantic</strong></button>      
        <input type="checkbox" class="hidden" name="romantic" value="Romantic"/>
    </span>
    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Landscape</strong></button>
        <input type="checkbox" class="hidden" name="landscape" value="Landscape"/>
    </span>

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Beach</strong></button>
        <input type="checkbox" class="hidden" name="beach" value="Romantic"/>
    </span>

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Gastronomy</strong></button>
        <input type="checkbox" class="hidden" name="gastronomy" value="Gastronomy"/>
    </span>
   
    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Historic</strong></button>
        <input type="checkbox" class="hidden" name="historic" value="Historic"/>
    </span>

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Abandoned</strong></button>
        <input type="checkbox" class="hidden" name="abandoned" value="Abandoned"/>
    </span>

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Peacefull</strong></button>
        <input type="checkbox" class="hidden" name="peacefull" value="Peacefull"/>
    </span>

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Night</strong></button>
        <input type="checkbox" class="hidden" name="night" value="Night"/>
    </span>  

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Nature</strong></button>
        <input type="checkbox" class="hidden" name="nature" value="Nature"/>
    </span>   

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Mysterious</strong></button>
        <input type="checkbox" class="hidden" name="mysterious" value="Mysterious"/>
    </span> 

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Folklore</strong></button>
        <input type="checkbox" class="hidden" name="folklore" value="Folklore"/>
    </span> 

    <span class="button-checkbox col-12 col-sm-6 col-md-4">
        <button type="button" class="btn check_interests" data-color="primary"><strong>Urban</strong></button>
        <input type="checkbox" class="hidden" name="urban" value="Urban"/>
    </span> 
</div>  

<div class="form-group avatar_img">
    <label for="Avatar"><strong>Avatar image</strong></label>
    <input name ="imgUrl" type="file" class="form-control-file col-sm-12 img_upload" id="avatar" aria-describedby="fileHelp">
    <small id="fileHelp" class="form-text text-muted">Select and image to use as your avatar (only: jpg/jpeg/png/gif)</small>
  </div>

    <button class="signup-submit but btn-success btn-lg" type="submit">Submit</button>
</form>
